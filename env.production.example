# Production env example (copy -> `.env.production`)
# - docker-compose.yml 에서 env_file 로 로드되는 파일의 예시입니다.

NODE_ENV=production

# Database (docker-compose 기준)
DATABASE_URL=postgresql://postgres:password@db:5432/gateway?schema=public

# Gateway 서비스 매핑 (JSON)
# - 운영에서는 실제 서비스 도메인(host)과 내부 업스트림 URL로 매핑하세요.
GATEWAY_SERVICES={"svc1.example.com":{"upstream":"http://svc1:8080"},"svc2.example.com":{"upstream":"http://svc2:8080"}}

# Better Auth (운영 canonical origin)
BETTER_AUTH_URL=https://auth.example.com
BETTER_AUTH_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_SECRET

# Resend (Email OTP)
RESEND_API_KEY=REPLACE_WITH_RESEND_API_KEY
RESEND_FROM_EMAIL=no-reply@example.com

# Social providers (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=


